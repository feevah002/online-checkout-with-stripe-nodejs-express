<%- include ("./partials/header.ejs")%>
  <div class="container">
    <div class=" row p-4 pb-2 ">


      <div class="row">
      <% cart.items.forEach(cartItem=>{ %>
          <div class="col-lg-8 col-xs-12 col-sm-12">
             <div class="card" >
              <div class="card-body">
               <p> name: <%= cartItem.productId.name %></p><!--work on this-->
                <p class="card-text"> price: $<%= cartItem.price %></p><!--work on this-->
                <p class="card-text">quantity: <%= cartItem.quantity %></p><!--work on this-->
              </div>
            </div> 
               <!-- end of first card -->
          </div>
          <br>
          <!-- end of column  -->
        
      <%} );%>
      <p>total: $<%=cart.subTotal%></p>

      
    </div>
      
      <div class="container">
        <div class = "row p-3 pb-3">
          <div id = "checOutCont"class=" col-lg-8 col-xs-12 col-sm-12">
            <form action="/<%= cart.userId.id%>/checkout" method="post">
              <button id="checkout"class=" btn btn-danger">CheckOut</button>
            </form>
           
          </div>
        </div>
      </div>
  </div>
  <!-- end of container -->  
<%- include("./partials/footer.ejs") %>